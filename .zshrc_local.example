# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# .zshrc_local - マシン固有の設定ファイル
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 【用途】
# このファイルはマシン（PC）ごとに異なる設定を記述するためのものです。
# dotfilesリポジトリには含めず、各マシンでローカルに管理します。
#
# 【設定例】
# - マシン固有のPATH設定
# - 会社PC専用のエイリアス
# - 個人PC専用の環境変数
# - APIキーやトークン（機密情報）
# - プロキシ設定
#
# 【注意】
# - このファイルは .zshrc の最後で読み込まれます
# - dotfilesリポジトリにはコミットされません（.gitignore済み）
# - ~/.zshrc_local に配置してください
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PATH設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 例：ホームディレクトリ配下のbinを追加
# export PATH=$HOME/bin:$PATH

# 例：ローカルにインストールしたツールのパス
# export PATH=/usr/local/bin:$PATH

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# エイリアス
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━


# 例：会社PCでのプロキシ経由git
# alias git='http_proxy=http://proxy.example.com:8080 git'

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 環境変数
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 例：エディタの設定
# export EDITOR=vim

# 例：プロキシ設定（会社PCなど）
# export HTTP_PROXY=http://proxy.example.com:8080
# export HTTPS_PROXY=http://proxy.example.com:8080

# 例：APIキー（機密情報）
# export GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
# export OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# その他の設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 例：rbenvの初期化（個人PCでRuby開発する場合）
# eval "$(rbenv init - zsh)"

# 例：pyenvの初期化（個人PCでPython開発する場合）
# eval "$(pyenv init -)"
